{
  "compilerOptions": {
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "lib": ["dom", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "noEmitOnError": true,
    "target": "esnext",
    "module": "esnext",
    "types": ["vite/client"],
    "paths": {
      "$/*": ["./packages/*"],
      "$sandbox/*": ["./applications/sandbox/packages/*"],
      "$web/*": ["./applications/web/packages/*"],
      "$api/*": ["./applications/api/src/*"]
    }
  },
  "include": [
    "./applications/web/packages",
    "./applications/sandbox/packages",
    "./applications/api/src",
    "./packages",
  ],
  "exclude": ["node_modules"],
}
